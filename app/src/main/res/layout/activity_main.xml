<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context="org.woheller69.eggtimer.MainActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:background="@drawable/round_button"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showTutorial"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/egg"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/altitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:textSize="26dp"
            />

        <Spinner
            android:id="@+id/spinnerSize"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleX="2"
            android:scaleY="2"
            android:background="@null"
            android:gravity="center_horizontal"
            />

        <Spinner
            android:id="@+id/spinnerFridge"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:scaleX="2"
            android:scaleY="2"
            android:background="@null"
            android:gravity="center_horizontal"
            />

        <Spinner
            android:id="@+id/spinnerConsistency"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="-5dp"
            android:scaleX="2"
            android:scaleY="2"
            android:background="@null"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="-3dp"
            android:onClick="controlTimer"
            android:text="--:--"
            android:textSize="60dp" />

        <Button
            android:id="@+id/controllerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:onClick="controlTimer"
            android:text="@string/start" />

    </LinearLayout>
</RelativeLayout>